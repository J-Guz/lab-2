<div class="container">

    <div class="card">
    <h5 class="card-header"><%=@post.author%></h5>
        <div class="card-body">
            <h5 class="card-title">  <%=@post.title%> </h5>
            <p class="card-text"><%=@post.content%></p>
            <h6>Comentarios</h6>

            <% @comments.each do |comment|%>
                
                <div class="card">
                     <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p><%=comment.content%></p>
                            <footer class="blockquote-footer"><%=comment.author%><cite title="Source Title"> Escrito con writter app</cite></footer>
                        </blockquote>
                    </div>
                </div>

            <%end%>


        </div>
    </div>

</div>